<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tama.crudxmljavafx.controller.MainController">
   <top>
      <VBox spacing="10.0" styleClass="header-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="title" text="Customer Management System">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <!-- Search and Controls Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Search:" />
                  <TextField fx:id="searchField" prefWidth="200.0" promptText="Search by NIK, Name, Born, Active, Salary..." />
                  <Button fx:id="searchButton" onAction="#handleSearch" styleClass="primary-button" text="Search" />
                  <Button fx:id="clearSearchButton" onAction="#handleClearSearch" text="Clear" />
                  
                  <Separator orientation="VERTICAL" />
                  
                  <Label text="Rows per page:" />
                  <ComboBox fx:id="pageSizeComboBox" onAction="#handlePageSizeChange" prefWidth="80.0" />
               </children>
            </HBox>
            
            <!-- Action Buttons Section -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="addButton" onAction="#handleAddCustomer" styleClass="success-button" text="Add Customer" />
                  <Button fx:id="refreshButton" onAction="#handleRefresh" text="Refresh" />
                  
                  <Separator orientation="VERTICAL" />
                  
                  <Button fx:id="uploadCSVButton" onAction="#handleUploadCSV" styleClass="info-button" text="Upload CSV" />
                  <Button fx:id="downloadCSVButton" onAction="#handleDownloadCSV" styleClass="info-button" text="Download CSV" />
                  <Button fx:id="uploadExcelButton" onAction="#handleUploadExcel" styleClass="info-button" text="Upload Excel" />
                  <Button fx:id="downloadExcelButton" onAction="#handleDownloadExcel" styleClass="info-button" text="Download Excel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <!-- Table Section -->
            <TableView fx:id="customerTable" onMouseClicked="#handleTableClick" styleClass="data-table">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                  <TableColumn fx:id="nikColumn" prefWidth="100.0" text="NIK" />
                  <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                  <TableColumn fx:id="bornColumn" prefWidth="120.0" text="Born Date" />
                  <TableColumn fx:id="activeColumn" prefWidth="80.0" text="Status" />
                  <TableColumn fx:id="salaryColumn" prefWidth="150.0" text="Salary" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <VBox spacing="10.0" styleClass="footer-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <!-- Pagination Section -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="firstPageButton" onAction="#handleFirstPage" text="First" />
                  <Button fx:id="prevPageButton" onAction="#handlePreviousPage" text="Previous" />
                  
                  <Label fx:id="pageInfoLabel" styleClass="page-info" text="Page 1 of 1" />
                  
                  <Button fx:id="nextPageButton" onAction="#handleNextPage" text="Next" />
                  <Button fx:id="lastPageButton" onAction="#handleLastPage" text="Last" />
               </children>
            </HBox>
            
            <!-- Status Section -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label fx:id="recordCountLabel" styleClass="record-info" text="Total Records: 0" />
                  <Label fx:id="statusLabel" styleClass="status-info" text="Ready" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
