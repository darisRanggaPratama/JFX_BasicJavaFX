<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tama.crudxmljavafx.controller.CustomerFormController">
   <top>
      <VBox spacing="10.0" styleClass="header-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label fx:id="formTitleLabel" styleClass="title" text="Customer Details">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="15.0" styleClass="form-section">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <!-- ID Field (Read-only) -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="ID:" />
                  <TextField fx:id="idField" editable="false" prefWidth="200.0" styleClass="readonly-field" />
               </children>
            </HBox>
            
            <!-- NIK Field -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="NIK:" />
                  <TextField fx:id="nikField" prefWidth="200.0" promptText="Enter NIK (6 characters)" />
                  <Label styleClass="required" text="*" />
               </children>
            </HBox>
            
            <!-- Name Field -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Name:" />
                  <TextField fx:id="nameField" prefWidth="300.0" promptText="Enter full name" />
                  <Label styleClass="required" text="*" />
               </children>
            </HBox>
            
            <!-- Born Date Field -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Born Date:" />
                  <DatePicker fx:id="bornDatePicker" prefWidth="200.0" promptText="Select birth date" />
               </children>
            </HBox>
            
            <!-- Active Status Field -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Status:" />
                  <CheckBox fx:id="activeCheckBox" text="Active" />
               </children>
            </HBox>
            
            <!-- Salary Field -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="100.0" text="Salary:" />
                  <TextField fx:id="salaryField" prefWidth="200.0" promptText="Enter salary amount" />
                  <Label text="(Rupiah)" />
               </children>
            </HBox>
            
            <!-- Validation Message -->
            <Label fx:id="validationLabel" styleClass="error-message" text="" visible="false" />
         </children>
      </VBox>
   </center>
   
   <bottom>
      <VBox spacing="10.0" styleClass="footer-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="saveButton" onAction="#handleSave" styleClass="success-button" text="Save" />
                  <Button fx:id="updateButton" onAction="#handleUpdate" styleClass="primary-button" text="Update" visible="false" />
                  <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="danger-button" text="Delete" visible="false" />
                  <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
               </children>
            </HBox>
            
            <!-- Help Text -->
            <Label styleClass="help-text" text="* Required fields" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
