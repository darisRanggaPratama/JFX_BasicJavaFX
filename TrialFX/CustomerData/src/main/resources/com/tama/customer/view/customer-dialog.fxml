<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tama.customer.controller.CustomerDialogController">
    <GridPane vgap="10" hgap="10">
        <Label text="NIK:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nikField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Born:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="bornField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Active:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <CheckBox fx:id="activeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Salary:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" style="-fx-base: #ff6b6b;"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
