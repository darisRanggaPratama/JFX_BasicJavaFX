<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tama.mysqljfx.controller.DepartmentEditController"
      prefHeight="300.0" prefWidth="400.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Edit Department" style="-fx-font-size: 18px; -fx-font-weight: bold"/>

    <GridPane vgap="10" hgap="10">
        <Label text="Department ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="departmentIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" disable="true"/>

        <Label text="Department Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="departmentNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Faculty:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="facultyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #ff4444;"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
