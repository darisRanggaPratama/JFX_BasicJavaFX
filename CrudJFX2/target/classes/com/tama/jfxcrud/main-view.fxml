<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tama.jfxcrud.controller.MainViewController">
    
    <top>
        <VBox spacing="10">
            <MenuBar>
                <Menu text="Connect">
                    <MenuItem onAction="#handleOpenConnection" text="Open Connection" />
                    <MenuItem onAction="#handleCloseConnection" text="Close Connection" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#handleExit" text="Exit" />
                </Menu>
                <Menu text="Data">
                    <MenuItem onAction="#handleAddData" text="Add Data" />
                    <MenuItem onAction="#handleRefreshTable" text="Refresh Table" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#handlePrintPreview" text="Print Preview" />
                    <MenuItem onAction="#handleExportPDF" text="Export to PDF" />
                </Menu>
                <Menu text="CSV">
                    <MenuItem onAction="#handleUploadCSV" text="Upload CSV" />
                    <MenuItem onAction="#handleDownloadCSV" text="Download CSV" />
                </Menu>
                <Menu text="Excel">
                    <MenuItem onAction="#handleUploadExcel" text="Upload XLSX" />
                    <MenuItem onAction="#handleDownloadExcel" text="Download XLSX" />
                </Menu>
            </MenuBar>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label text="Search:" />
                <TextField fx:id="searchField" prefWidth="300" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idxColumn" text="ID" />
                <TableColumn fx:id="nikColumn" text="NIK" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="bornColumn" text="Born Date" />
                <TableColumn fx:id="activeColumn" text="Active" />
                <TableColumn fx:id="salaryColumn" text="Salary" />
            </columns>
            <placeholder>
                <Label text="No data available" />
            </placeholder>
        </TableView>
    </center>
    
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="prevButton" onAction="#handlePrevPage" text="Previous" />
                <Label fx:id="pageInfoLabel" text="Page 0 of 0 (Total records: 0)" />
                <Button fx:id="nextButton" onAction="#handleNextPage" text="Next" />
                <Label text="Rows per page:" />
                <ComboBox fx:id="rowsPerPageComboBox" onAction="#handleRowsPerPageChange" />
                <Label fx:id="connectionStatusLabel" style="-fx-text-fill: red;" text="Not Connected" />
            </HBox>
        </VBox>
    </bottom>
   <padding>
      <Insets left="5.0" right="5.0" />
   </padding>
</BorderPane>
