<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tama.otodidakjfx.CalculatorController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="title" text="Kalkulator JavaFX dengan FXML">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Display Area -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="displayField" alignment="CENTER_RIGHT" editable="false" prefHeight="50.0" prefWidth="300.0" styleClass="display-field" text="0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Label fx:id="operationLabel" styleClass="operation-label" text=" " />
               </children>
            </VBox>
            
            <!-- Button Grid -->
            <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
               <children>
                  <!-- Row 0: Clear and Operations -->
                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" prefHeight="50.0" prefWidth="60.0" styleClass="clear-button" text="C" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Button fx:id="backspaceButton" mnemonicParsing="false" onAction="#handleBackspace" prefHeight="50.0" prefWidth="60.0" styleClass="operation-button" text="⌫" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Button fx:id="divideButton" mnemonicParsing="false" onAction="#handleOperation" prefHeight="50.0" prefWidth="60.0" styleClass="operation-button" text="÷" userData="/" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <Button fx:id="multiplyButton" mnemonicParsing="false" onAction="#handleOperation" prefHeight="50.0" prefWidth="60.0" styleClass="operation-button" text="×" userData="*" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                  
                  <!-- Row 1: Numbers 7-9 and Subtract -->
                  <Button fx:id="button7" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="7" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Button fx:id="button8" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="button9" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="subtractButton" mnemonicParsing="false" onAction="#handleOperation" prefHeight="50.0" prefWidth="60.0" styleClass="operation-button" text="-" userData="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  
                  <!-- Row 2: Numbers 4-6 and Add -->
                  <Button fx:id="button4" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Button fx:id="button5" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="button6" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleOperation" prefHeight="50.0" prefWidth="60.0" styleClass="operation-button" text="+" userData="+" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                  
                  <!-- Row 3: Numbers 1-3 and Equals (spans 2 rows) -->
                  <Button fx:id="button1" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="1" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Button fx:id="button2" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Button fx:id="button3" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                  <Button fx:id="equalsButton" mnemonicParsing="false" onAction="#handleEquals" prefHeight="110.0" prefWidth="60.0" styleClass="equals-button" text="=" GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.rowSpan="2" />
                  
                  <!-- Row 4: Zero (spans 2 columns) and Decimal -->
                  <Button fx:id="button0" mnemonicParsing="false" onAction="#handleNumber" prefHeight="50.0" prefWidth="130.0" styleClass="number-button" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                  <Button fx:id="decimalButton" mnemonicParsing="false" onAction="#handleDecimal" prefHeight="50.0" prefWidth="60.0" styleClass="number-button" text="." GridPane.columnIndex="2" GridPane.rowIndex="4" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
            
            <!-- History Area -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label styleClass="subtitle" text="Riwayat Perhitungan:" />
                  <ListView fx:id="historyListView" prefHeight="100.0" prefWidth="300.0" />
                  <Button fx:id="clearHistoryButton" mnemonicParsing="false" onAction="#handleClearHistory" styleClass="clear-button" text="Hapus Riwayat" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
